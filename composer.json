{
    "name": "ucrm-plugins/sdk-logging",
    "description": "A logging library for the UCRM Plugin SDK.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@mvqn.net"
        }
    ],
    "require": {
        "php": "~7.3",

        "ext-json": "*",

        "ucrm-plugins/sdk-common": "dev-master",

        "monolog/monolog": "^1.24"
    },
    "require-dev": {
        "phpunit/phpunit": "~9"
    },
    "autoload": {
        "psr-4": {
            "UCRM\\Logging\\": [ "./src/", "./tests/" ]
        }
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "scripts": {
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        { "name": "sdk", "type": "path", "options": { "symlink": false }, "url": "../*" }
    ]

}
